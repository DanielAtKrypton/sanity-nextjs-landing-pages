{
  "private": true,
  "name": "krypton-unite-website",
  "version": "1.0.9",
  "scripts": {
    "build" : "run-p builds:**",
    "builds:main": "lerna run build --parallel",
    "builds:web": "lerna bootstrap && (cd web && npm run build)",
    "builds:studio": "lerna bootstrap && (cd studio && npm run build)",
    "dev": "lerna run dev --parallel",
    "format": "lerna run format",
    "graphql-deploy": "lerna run graphql-deploy",
    "lint": "lerna run lint",
    "postinstall": "lerna bootstrap",
    "tests:web": "cd web && npm run test",
    "tests:studio": "cd studio && npm run test",
    "test": "run-p tests:**",
    "updates:this": "npm update",
    "updates:web": "cd web && npm update",
    "updates:studio": "cd studio && npm update",
    "update": "run-p updates:**"
  },
  "devDependencies": {
    "@sanity/cli": "^1.150.7",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5"
  }
}
